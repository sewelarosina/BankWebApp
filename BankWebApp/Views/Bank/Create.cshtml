@model YourProjectName.Models.BankAccount

<div class="container mt-5">
    <h3>Create Account</h3>

    <form asp-action="Create" method="post">
        <input asp-for="Owner" class="form-control mb-2" placeholder="Owner Name" />
        <input asp-for="Balance" type="number" class="form-control mb-2" placeholder="Initial Balance" />
        <button class="btn btn-primary">Create</button>
    </form>
</div>
