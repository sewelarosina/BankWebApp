@model YourProjectName.Models.TransferViewModel

<div class="container mt-5">
    <h3>Transfer Money</h3>

    <form asp-action="Transfer" asp-controller="Bank" method="post" class="mt-4">

        <div class="mb-3">
            <label class="form-label">From Account</label>
            <input asp-for="FromAccount" class="form-control" />
            <span asp-validation-for="FromAccount" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">To Account</label>
            <input asp-for="ToAccount" class="form-control" />
            <span asp-validation-for="ToAccount" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Amount</label>
            <input asp-for="Amount" type="number" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-info text-white">Transfer</button>
        <a asp-action="Index" asp-controller="Bank" class="btn btn-secondary">Cancel</a>

        <div asp-validation-summary="ModelOnly" class="text-danger mt-3"></div>
    </form>
</div>
