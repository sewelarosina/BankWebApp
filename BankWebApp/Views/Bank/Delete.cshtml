@model BankWebApp.Models.BankAccount

<h2>Delete Account – @Model.AccountNumber</h2>

<p>Are you sure you want to delete "<strong>@Model.Owner</strong>" with balance $@Model.Balance?</p>

<form method="post" asp-action="DeleteConfirmed">
    <input type="hidden" name="id" value="@Model.AccountNumber" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
