@model BankWebApp.Models.BankAccount

<h2>Withdraw – Account @Model.AccountNumber</h2>

<form method="post">
    <input type="hidden" name="id" value="@Model.AccountNumber" />

    <div class="mb-3">
        <label>Amount</label>
        <input name="amount" type="number" class="form-control" required />
    </div>

    <button class="btn btn-warning">Withdraw</button>
</form>
