@model List<YourProjectName.Models.BankAccount>

<div class="container mt-5">
    <h2 class="text-center mb-4">Bank Account Dashboard</h2>

    <div class="text-center mb-4">
        <a asp-action="Create" class="btn btn-primary me-2">Create Account</a>
        <a asp-action="Transfer" class="btn btn-info text-white">Transfer</a>
    </div>

    <table class="table table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>Account</th>
                <th>Owner</th>
                <th>Balance</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var acc in Model)
            {
                <tr>
                    <td>@acc.AccountNumber</td>
                    <td>@acc.Owner</td>
                    <td>@acc.Balance</td>
                    <td>
                        <a asp-action="Deposit" asp-route-accountNumber="@acc.AccountNumber" class="btn btn-success btn-sm">Deposit</a>
                        <a asp-action="Withdraw" asp-route-accountNumber="@acc.AccountNumber" class="btn btn-warning btn-sm">Withdraw</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
