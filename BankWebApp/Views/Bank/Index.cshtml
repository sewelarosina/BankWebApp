@model List<BankWebApp.Models.BankAccount>

@{
    ViewData["Title"] = "Bank Dashboard";
}

<h2 class="mb-4">Bank Account Dashboard</h2>

<!-- SUCCESS / ERROR MESSAGE -->
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<a asp-action="Create" class="btn btn-primary mb-3">Create New Account</a>
<a asp-action="Transfer" class="btn btn-info mb-3">Transfer Money</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Account Number</th>
            <th>Owner</th>
            <th>Balance</th>
            <th style="width: 220px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="4" class="text-center">No accounts created yet.</td>
            </tr>
        }
        else
        {
            foreach (var account in Model)
            {
                <tr>
                    <td>@account.AccountNumber</td>
                    <td>@account.Owner</td>
                    <td>R @account.Balance</td>
                    <td>
                        <a asp-action="Deposit"
                           asp-route-accountNumber="@account.AccountNumber"
                           class="btn btn-success btn-sm">
                            Deposit
                        </a>

                        <a asp-action="Withdraw"
                           asp-route-accountNumber="@account.AccountNumber"
                           class="btn btn-warning btn-sm">
                            Withdraw
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
