@model List<YourProjectName.Models.BankAccount>

<div class="container mt-4">
    <h2>Bank Account Dashboard</h2>

    <a asp-action="Create" class="btn btn-primary mb-3">Create New Account</a>
    <a asp-action="Transfer" class="btn btn-info mb-3 text-white">Transfer Money</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Account Number</th>
                <th>Owner</th>
                <th>Balance</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var acc in Model)
            {
                <tr>
                    <td>@acc.AccountNumber</td>
                    <td>@acc.Owner</td>
                    <td>@acc.Balance.ToString("C")</td>
                    <td>
                        <a asp-action="Deposit" asp-route-accountNumber="@acc.AccountNumber" class="btn btn-success btn-sm me-1">Deposit</a>
                        <a asp-action="Withdraw" asp-route-accountNumber="@acc.AccountNumber" class="btn btn-warning btn-sm me-1">Withdraw</a>
                        <a asp-action="Transactions" asp-route-accountNumber="@acc.AccountNumber" class="btn btn-secondary btn-sm">History</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
