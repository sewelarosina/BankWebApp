@model List<BankWebApp.Models.BankAccount>

<div class="container mt-5">
    <h1 class="mb-4 text-center">Bank Account Dashboard</h1>

    <div class="mb-4 text-center">
        <a class="btn btn-primary me-2" href="/Bank/Create">Create New Account</a>
        <a class="btn btn-info me-2" href="/Bank/Transfer">Transfer Money</a>
    </div>

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Account Number</th>
                <th>Owner</th>
                <th>Balance</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var account in Model)
            {
                <tr>
                    <td>@account.AccountNumber</td>
                    <td>@account.Owner</td>
                    <td>@account.Balance.ToString("C")</td>
                    <td>
                        <a class="btn btn-sm btn-success me-1" href="/Bank/Deposit/@account.AccountNumber">Deposit</a>
                        <a class="btn btn-sm btn-warning me-1" href="/Bank/Withdraw/@account.AccountNumber">Withdraw</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
