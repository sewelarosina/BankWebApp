@model List<BankAccount>

<div class="container mt-5">

    <h2 class="text-center mb-4">Bank Account Dashboard</h2>

    <div class="text-center mb-4">
        <a class="btn btn-primary me-2" asp-action="Create">Create New Account</a>
        <a class="btn btn-info text-white" asp-action="Transfer">Transfer Money</a>
    </div>

    <table class="table table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>Account Number</th>
                <th>Owner</th>
                <th>Balance</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var acc in Model)
            {
                <tr>
                    <td>@acc.AccountNumber</td>
                    <td>@acc.Owner</td>
                    <td>@acc.Balance</td>
                    <td>
                        <span class="text-muted">—</span>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
