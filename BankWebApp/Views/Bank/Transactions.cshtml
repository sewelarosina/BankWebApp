@model List<BankWebApp.Models.Transaction>

<h2 class="text-center mb-4">Transaction History</h2>

<table class="table table-bordered table-striped text-center">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Account #</th>
            <th>Type</th>
            <th>Amount</th>
            <th>Description</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || Model.Count == 0)
        {
            <tr><td colspan="6">No transactions yet.</td></tr>
        }
        else
        {
            foreach (var tx in Model)
            {
                <tr>
                    <td>@tx.TransactionId</td>
                    <td>@tx.AccountNumber</td>
                    <td>@tx.Type</td>
                    <td>$@tx.Amount</td>
                    <td>@tx.Description</td>
                    <td>@tx.Date.ToString("yyyy-MM-dd HH:mm:ss")</td>
                </tr>
            }
        }
    </tbody>
</table>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
</div>
