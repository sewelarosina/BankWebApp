@model List<YourProjectName.Models.Transaction>
@{
    var account = (YourProjectName.Models.BankAccount)ViewBag.Account;
}

<div class="container mt-5">
    <h3>Transaction History for Account @account.AccountNumber (@account.Owner)</h3>

    <table class="table table-striped mt-4">
        <thead>
            <tr>
                <th>Date</th>
                <th>Type</th>
                <th>Amount</th>
                <th>Related Account</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="4" class="text-center">No transactions found.</td>
                </tr>
            }
            else
            {
                foreach (var tx in Model)
                {
                    <tr>
                        <td>@tx.Date.ToString("g")</td>
                        <td>@tx.Type</td>
                        <td>
                            @if (tx.Type == YourProjectName.Models.TransactionType.Withdraw)
                            {
                                <span class="text-danger">-@tx.Amount</span>
                            }
                            else
                            {
                                <span class="text-success">@tx.Amount</span>
                            }
                        </td>
                        <td>@(tx.RelatedAccountNumber?.ToString() ?? "-")</td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <a asp-action="Index" class="btn btn-primary">Back to Dashboard</a>
</div>
